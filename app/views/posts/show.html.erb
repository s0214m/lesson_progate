<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
    <div class="post-user-name">
        <img src="<%= "/user_image/#{@user.image_name}"%>" >
        <%= link_to(@user.name,"/user/#{@user.id}") %>
      </div>
      <p>
        <%= @post.content %>
      </p>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id)  %>
        <%= link_to("/likes/#{@post.id}/destroy", data: {turbo_method: :post}) do %>
          <span class="fa fa-heart liked-btn"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", data: {fturbo_method: :post}) do %>
          <span class="fa fa-heart unliked-btn"></span>
        <% end %>
      <% end %>
      <%= @likes %>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <% if @current_user.id == @post.user_id %>
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", data: { turbo_method: :post }) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
