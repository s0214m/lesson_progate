<div class="main user-show">
  <div class="container">
      <div class="user">
        <img src="<%= "/user_image/#{@user.image_name}" %>">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
        <% if @current_user.id == @user.id %>
        <%= link_to("編集","/user/#{@user.id}/edit") %>
        <% end %>
      </div>
      <ul class="user-tabs">
        <li class="active"><%= link_to("投稿", "/user/#{@user.id}") %></li>
        <li><%= link_to("いいね!", "/user/#{@user.id}/likes") %></li>
      </ul>
      <% @posts.each do |post| %>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_image/#{post.user.image_name}" %>">
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to( post.user.name, "/user/#{post.user.id}" ) %>
            </div>
            <%= link_to(post.content, "/posts/#{post.id}") %>
          </div>
        </div>
      <% end %>
  </div>
</div>
